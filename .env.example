# PIC Hub Configuration Template

# --- LLM Providers ---
# Primary Cloud Provider (e.g., Gemini, OpenAI, Claude)
GOOGLE_API_KEY=your_key_here
# OPENAI_API_KEY=your_key_here

# Local Provider (e.g., Ollama)
LOCAL_LLM_URL=http://localhost:11434
LOCAL_LLM_MODEL=llama3:8b

# --- System Paths ---
# The path where PIC Hub stores its internal data
PIC_DATA_DIR=./instance/local_storage
# The path to your local data project (e.g., Jupyter directory)
ANALYTICS_DIR=/Users/harold/working/Jupyter_AI_DataAnalyze

# --- Security ---
# Set to True to require explicit confirmation for all code execution
MANDATORY_HUMAN_CONFIRM=True
# Sandbox Mode: Docker (High) / Subprocess (Medium) / None (Low)
EXECUTION_SANDBOX=Subprocess

# --- UI ---
# Show floating orbit on startup
SHOW_SMART_ORBIT=True
